<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.aptech.shiro.permission.dao.SysUserDao">
	<insert id="add" parameterType="org.aptech.shiro.permission.pojo.SysUser"
		useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into sys_user(username,password,salt,locked)
			values(#{username},#{password},#{salt},#{locked})
	</insert>
	
	<update id="update" parameterType="org.aptech.shiro.permission.pojo.SysUser">
		update sys_user set username = #{username},password=#{password},salt=#{salt},locked=#{locked}
			where id = #{id}
	</update>
	
	<insert id="addUserRole">
		insert into sys_user_role(sys_user_id,sys_role_id)
			values 
			<foreach collection="roleIds" item="item" separator=",">
				(#{userId},#{item})
			</foreach>
	</insert>
	
	<delete id="deleteByIds" parameterType="java.lang.reflect.Array">
		delete from sys_user where id in
		<foreach collection="array" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>

	<select id="getByUsername" parameterType="string" resultType="org.aptech.shiro.permission.pojo.SysUser">
		select * from sys_user where username = #{username}
	</select>
	
	<sql id="conditionSql">
		<if test="condition != null">
			<where>
				<if test="condition.username != null and condition.username != ''">
					username like concat('%',#{condition.username},'%')
				</if>
				<if test="condition.sysRoles != null and condition.sysRoles.size > 0">
					and id in (select sys_user_id from sys_user_role where sys_role_id in 
						<foreach collection="condition.sysRoles" open="(" close=")" separator="," item="item">
							#{item.id}
						</foreach>
					)
				</if>
			</where>
		</if>
	</sql>
	<resultMap type="org.aptech.shiro.permission.pojo.SysUser" id="userMap" autoMapping="true">
		<id column="id" property="id"/>
		<collection property="sysRoles" javaType="java.util.List" ofType="org.aptech.shiro.permission.pojo.SysRole" column="id" select="getRolesByUserId"></collection>
	</resultMap>
	
	<select id="getById" parameterType="int" resultMap="userMap">
		select * from sys_user where id = #{id}
	</select>
	
	<delete id="deleteRelationByUserId" parameterType="int">
		delete from sys_user_role where sys_user_id = #{id}
	</delete>
	
	<select id="getRolesByUserId" parameterType="int" resultType="org.aptech.shiro.permission.pojo.SysRole">
		select * from sys_role where id in (select sys_role_id from sys_user_role where sys_user_id = #{id})
	</select>
	<select id="getListByCondition" resultMap="userMap">
		select * from sys_user
			<include refid="conditionSql"></include>
		order by ${column} ${orderBy}
			limit #{start},#{limit}
	</select>
	<select id="getCountByCondition" resultType="int">
		select count(1) from sys_user
			<include refid="conditionSql"></include>
	</select>
</mapper>